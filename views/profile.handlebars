<section class="profile-info container">
  <div class="row">
    <div class="col profile-col-1 text-white">
      <h4 class="userIdAccess" id='{{user.user_id}}'>{{user.username}}</h4>
      <h6>Email: {{user.email}}</h6>
      <h6>Location: {{user.location}}</h6> 
    </div>
    <div class = "col text-white" id="bioInfo">
        {{#if user.bio}}
        <h6>Bio:</h6>
        <p name="bio" id="" cols="60" rows="2"></p>
        {{user.bio}}
        </p>
        {{else}}
        {{#unless loggedIn}}
        <button class='btn btn-primary' id="add-bio">Add a bio!</button>
        {{/unless}}
        {{/if}}
    </div>
  </div>
    
</section>

{{#if posts.length}}
<section>
  {{!-- <h2>Your Posts</h2> --}}
  <ul>
    {{#each posts as |post|}}
    <li class="post-info">
      {{> post-info post}}
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
<h2 class='text-white'>No posts!</h2>
{{/if}}

{{#if user_profile}}
<a class="add-post-link" href="/profile/post"> + New Post</a>
{{/if}}

<script src="/javascript/add-bio.js"></script>