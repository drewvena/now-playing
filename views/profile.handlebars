<section class="profile-info container">
  <div class="row">
    <div class="col profile-col-1">
      <h4>{{username}}</h4>
      <h6>Email: {{email}}</h6>
      <h6>Location: {{location}}</h6> 
    </div>
    <div class = "col">
      <h6>Bio:</h6>
      <p name="bio" id="" cols="60" rows="2">{{bio}}</p>
    </div>
  </div>
    
</section>

{{#if posts.length}}
<section>
  {{!-- <h2>Your Posts</h2> --}}
  <ul>
    {{#each posts as |post|}}
    <li class="post-info">
      {{> post-info post}}
      <a href="/profile/edit-post/{{post.id}}" class="edit-link">Edit Post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<a class="add-post-link" href="/profile/post"> + New Post</a>