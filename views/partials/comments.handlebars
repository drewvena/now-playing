<div class="comments">
  
  {{#each comments}}
  <section class="comment">
    <div class="meta">
      <a class="username" href="/profile/{{user_id}}">{{user.username}}</a> on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{#if loggedIn}}
      <button onclick="deleteComment()" type="button" class="btn" id="{{id}}"><i class="fas fa-trash" id="{{id}}"></i></button>
      {{/if}}
    </div>
  </section>
  {{/each}}
</div>
