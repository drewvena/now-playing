<div class="comments">
  
  {{#each comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{#if loggedIn}}
      <button onclick="deleteComment()" type="button" class="btn" id="{{id}}"><i class="fas fa-trash" id="{{id}}"></i></button>
      {{/if}}
    </div>
  </section>
  {{/each}}
</div>
