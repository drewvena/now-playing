<div class="comments d-flex flex-column">
  {{#each comments}}
  <section class="comment">
    <div class="meta">
      <a class="username" href="/profile/{{user_id}}">{{user.username}}</a> on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      {{#if loggedIn}}
      <button onclick="deleteComment()" type="button" class="btn-sm btn-outline-light" data-bs-toggle="modal" data-bs-target="#exampleModal" id="{{id}}"><i style="color:whitesmoke !important;" class="fas fa-trash" id="{{id}}"></i></button>
      {{/if}}
    </div>
  </section>
  {{/each}}
  <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
</div>

