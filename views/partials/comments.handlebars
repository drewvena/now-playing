<div class="comments">
  
  {{#each comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
      <i class="{{trash_button loggedIn}}"></i>
      
    </div>
  </section>
  {{/each}}
</div>