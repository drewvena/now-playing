<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
          {{!-- {{#if loggedIn}} --}}
      <i class="fas fa-trash"></i>
          {{!-- {{/if}} --}}

    </div>
  </section>
  {{/each}}
</div>